@using Task10.Models;
@{
    Layout = "~/Layouts/_MainLayout.cshtml";
    Page.Title = "Login";

    if (IsPost)
    {
        string login = Request["Login"];
        string password = Request["Password"];

        if (AuthModel.LoginSuccessful(login, password))
        {
            FormsAuthentication.SetAuthCookie(login, true);
            Response.Redirect("~");
        }
    }
}

<form action="~/Pages/Login" method="post">
    <label class="mb-2">Login</label>
    <input type="text" name="Login" placeholder="Login" class="form-control mb-2" />
    <input type="password" name="Password" placeholder="Password" class="form-control mb-2" />
    <button type="submit" class="btn btn-primary">Login</button>
    <a href="~/Pages/Register" class="btn btn-primary">Register</a>
</form>